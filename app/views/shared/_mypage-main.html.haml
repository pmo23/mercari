.mypage-content
  %section.mypage-content--user--icon
    =link_to "/" do
      %figure
        =image_tag("member_photo_noimage_thumb.png")
      = current_user.nickname
      .mypage-number
        %h2  評価 20 出品数 31
    = render 'stats'
    = render 'follow_form'
  %section.mypage-content--todo
    %ul.mypage-tabs
      %li.active
        %h3  お知らせ
      %li
        %h3  やることリスト
    .tab-content
      %ul
        %li
          =link_to "/", class: 'mypage-item-link' do
            %figure
              =image_tag("member_photo_noimage_thumb.png")
            .mypage-item-body
              %p  hhhrohiさんが「パンツ」にいいね！しました
              %p  １時間前
            %i.fa.fa-angle-right
        %li
          =link_to "/", class: 'mypage-item-link' do
            %figure
              =image_tag("member_photo_noimage_thumb.png")
            .mypage-item-body
              %p  hhhrohiさんが「パンツ」にいいね！しました
              %p  １時間前
            %i.fa.fa-angle-right
        %li.mypage-go-list
          =link_to "/", class: 'mypage-list' do
            一覧を見る
  %section.mypage-content--sold
    %h2.mypage-content--sold--tab  購入した商品
    %section.mypage-content--todo
      %ul.mypage-tabs
        %li.active
          %h3  取引中
        %li
          %h3  過去の取引
      .tab-content
        %ul
          %li
            %a.mypage-item-link
              %figure
                =image_tag("member_photo_noimage_thumb.png")
              .mypage-item-body
                %p  「CD」を購入しました。取引中です
                %p  １時間前
              %i.fa.fa-angle-right
          %li.mypage-go-list
            =link_to "/", class: 'mypage-list' do
              一覧を見る
